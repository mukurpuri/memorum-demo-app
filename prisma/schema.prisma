// Prisma Schema for ACME SaaS Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  sessions      Session[]
  teams         TeamMember[]
  subscription  Subscription?
  preferences   UserPreferences?
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  refreshToken String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  // Device tracking for security auditing
  userAgent      String?
  ipAddress      String?
  deviceType     String?   // "desktop" | "mobile" | "tablet" | "unknown"
  country        String?
  city           String?
  lastActivityAt DateTime?
  
  // Security flags
  isSuspicious   Boolean  @default(false)
  revokedAt      DateTime?
  revokedReason  String?
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([token])
  @@index([ipAddress])
  @@index([lastActivityAt])
}

model Team {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  
  members   TeamMember[]
}

model TeamMember {
  id       String   @id @default(cuid())
  userId   String
  teamId   String
  role     TeamRole @default(MEMBER)
  
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  @@unique([userId, teamId])
}

model Subscription {
  id               String   @id @default(cuid())
  userId           String   @unique
  stripeCustomerId String   @unique
  stripePriceId    String
  status           SubscriptionStatus
  currentPeriodEnd DateTime
  createdAt        DateTime @default(now())
  canceledAt       DateTime?
  
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================================================
// Payment Events (Audit Trail)
// ============================================================================

// Tracks all payment-related events for audit and reconciliation
model PaymentEvent {
  id               String   @id @default(cuid())
  stripeCustomerId String
  eventType        PaymentEventType
  amount           Int      // Amount in cents
  currency         String   @default("usd")
  
  // Stripe references
  invoiceId        String?
  chargeId         String?
  
  // Additional context
  metadata         Json?
  requiresAction   Boolean  @default(false)
  
  createdAt        DateTime @default(now())
  
  @@index([stripeCustomerId])
  @@index([eventType])
  @@index([createdAt])
  @@index([requiresAction])
}

enum PaymentEventType {
  PAYMENT_SUCCEEDED
  PAYMENT_FAILED
  REFUNDED
  DISPUTE_CREATED
  DISPUTE_RESOLVED
  SUBSCRIPTION_CREATED
  SUBSCRIPTION_UPDATED
  SUBSCRIPTION_CANCELED
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
}

// User Preferences Model
// Stores user-specific settings and customization options
model UserPreferences {
  id                  String   @id @default(cuid())
  userId              String   @unique
  
  // Display preferences
  theme               Theme    @default(SYSTEM)
  language            String   @default("en")
  timezone            String   @default("UTC")
  dateFormat          String   @default("MM/DD/YYYY")
  
  // Notification preferences
  emailNotifications  Boolean  @default(true)
  pushNotifications   Boolean  @default(true)
  weeklyDigest        Boolean  @default(true)
  marketingEmails     Boolean  @default(false)
  
  // Feature preferences
  compactMode         Boolean  @default(false)
  showTutorials       Boolean  @default(true)
  keyboardShortcuts   Boolean  @default(true)
  
  // Privacy preferences
  profileVisibility   Visibility @default(TEAM)
  activityVisibility  Visibility @default(TEAM)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

enum Theme {
  LIGHT
  DARK
  SYSTEM
}

enum Visibility {
  PUBLIC
  TEAM
  PRIVATE
}

// ============================================================================
// Audit Logging System
// ============================================================================

// Comprehensive audit trail for security-sensitive actions
// Required for compliance (SOC2, GDPR) and incident investigation
model AuditLog {
  id          String      @id @default(cuid())
  
  // Who performed the action
  userId      String?     // Null for system actions or unauthenticated
  sessionId   String?     // Link to session for device context
  ipAddress   String?
  userAgent   String?
  
  // What happened
  action      AuditAction
  resource    String      // e.g., "user", "session", "subscription"
  resourceId  String?     // ID of the affected resource
  
  // Context
  details     Json?       // Additional context (varies by action)
  severity    AuditSeverity @default(INFO)
  
  // Outcome
  success     Boolean     @default(true)
  errorCode   String?
  errorMessage String?
  
  // Timestamps
  createdAt   DateTime    @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([severity])
  @@index([createdAt])
  @@index([ipAddress])
}

enum AuditAction {
  // Authentication
  LOGIN_SUCCESS
  LOGIN_FAILED
  LOGOUT
  SESSION_CREATED
  SESSION_REVOKED
  SESSION_EXPIRED
  PASSWORD_CHANGED
  PASSWORD_RESET_REQUESTED
  PASSWORD_RESET_COMPLETED
  
  // Authorization
  PERMISSION_DENIED
  ROLE_CHANGED
  
  // Data access
  DATA_EXPORTED
  DATA_DELETED
  
  // Admin actions
  USER_CREATED
  USER_DELETED
  USER_SUSPENDED
  SETTINGS_CHANGED
  
  // Security events
  SUSPICIOUS_ACTIVITY
  RATE_LIMIT_EXCEEDED
  IP_BLOCKED
}

enum AuditSeverity {
  INFO
  WARNING
  CRITICAL
}

// ============================================================================
// AI Assistant System
// ============================================================================

model Organization {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  plan            OrgPlan  @default(FREE)
  costLimit       Float?
  warningThreshold Float?  @default(80)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  assistants      AiAssistant[]
  conversations   AiConversation[]
  usage           AiUsage[]
  auditLogs       OrgAuditLog[]

  @@index([slug])
}

enum OrgPlan {
  FREE
  STARTER
  PRO
  ENTERPRISE
}

model AiAssistant {
  id              String   @id @default(cuid())
  organizationId  String
  createdById     String?
  
  name            String
  description     String?
  model           String
  temperature     Float    @default(0.7)
  maxTokens       Int      @default(2000)
  systemPrompt    String
  
  capabilities    Json     @default("{}")
  permissions     Json     @default("{}")
  metadata        Json     @default("{}")
  
  isActive        Boolean  @default(true)
  usageCount      Int      @default(0)
  lastUsedAt      DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  conversations   AiConversation[]
  usage           AiUsage[]
  
  @@index([organizationId])
  @@index([isActive])
}

model AiConversation {
  id              String   @id @default(cuid())
  userId          String
  assistantId     String
  organizationId  String
  
  title           String
  isArchived      Boolean  @default(false)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  assistant       AiAssistant  @relation(fields: [assistantId], references: [id], onDelete: Cascade)
  messages        AiMessage[]
  
  @@index([userId])
  @@index([organizationId])
  @@index([assistantId])
}

model AiMessage {
  id              String   @id @default(cuid())
  conversationId  String
  
  role            String   // "user" | "assistant" | "system"
  content         String
  tokensUsed      Int?
  metadata        Json     @default("{}")
  
  createdAt       DateTime @default(now())
  
  conversation    AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  @@index([conversationId])
}

model AiUsage {
  id              String   @id @default(cuid())
  organizationId  String
  userId          String
  assistantId     String
  
  tokensUsed      Int
  cost            Float
  model           String
  
  createdAt       DateTime @default(now())
  
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  assistant       AiAssistant  @relation(fields: [assistantId], references: [id], onDelete: Cascade)
  
  @@index([organizationId])
  @@index([userId])
  @@index([assistantId])
  @@index([createdAt])
}

model OrgAuditLog {
  id              String   @id @default(cuid())
  organizationId  String
  userId          String
  action          String
  metadata        Json     @default("{}")
  timestamp       DateTime @default(now())
  
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@index([organizationId])
  @@index([action])
  @@index([timestamp])
}
