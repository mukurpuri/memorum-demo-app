// Prisma Schema for ACME SaaS Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Two-Factor Authentication
  twoFactorEnabled    Boolean   @default(false)
  twoFactorSecret     String?   // Encrypted TOTP secret
  twoFactorBackupCodes String[] // Hashed backup codes
  
  sessions      Session[]
  teams         TeamMember[]
  subscription  Subscription?
  preferences   UserPreferences?
  twoFactorAuth TwoFactorAuth?
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  refreshToken String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  // Device tracking for security auditing
  userAgent      String?
  ipAddress      String?
  deviceType     String?   // "desktop" | "mobile" | "tablet" | "unknown"
  country        String?
  city           String?
  lastActivityAt DateTime?
  
  // Security flags
  isSuspicious   Boolean  @default(false)
  revokedAt      DateTime?
  revokedReason  String?
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([token])
  @@index([ipAddress])
  @@index([lastActivityAt])
}

model Team {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  
  members   TeamMember[]
}

model TeamMember {
  id       String   @id @default(cuid())
  userId   String
  teamId   String
  role     TeamRole @default(MEMBER)
  
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  @@unique([userId, teamId])
}

model Subscription {
  id               String   @id @default(cuid())
  userId           String   @unique
  stripeCustomerId String   @unique
  stripePriceId    String
  status           SubscriptionStatus
  currentPeriodEnd DateTime
  createdAt        DateTime @default(now())
  canceledAt       DateTime?
  
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================================================
// Payment Events (Audit Trail)
// ============================================================================

// Tracks all payment-related events for audit and reconciliation
model PaymentEvent {
  id               String   @id @default(cuid())
  stripeCustomerId String
  eventType        PaymentEventType
  amount           Int      // Amount in cents
  currency         String   @default("usd")
  
  // Stripe references
  invoiceId        String?
  chargeId         String?
  
  // Additional context
  metadata         Json?
  requiresAction   Boolean  @default(false)
  
  createdAt        DateTime @default(now())
  
  @@index([stripeCustomerId])
  @@index([eventType])
  @@index([createdAt])
  @@index([requiresAction])
}

enum PaymentEventType {
  PAYMENT_SUCCEEDED
  PAYMENT_FAILED
  REFUNDED
  DISPUTE_CREATED
  DISPUTE_RESOLVED
  SUBSCRIPTION_CREATED
  SUBSCRIPTION_UPDATED
  SUBSCRIPTION_CANCELED
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
}

// User Preferences Model
// Stores user-specific settings and customization options
model UserPreferences {
  id                  String   @id @default(cuid())
  userId              String   @unique
  
  // Display preferences
  theme               Theme    @default(SYSTEM)
  language            String   @default("en")
  timezone            String   @default("UTC")
  dateFormat          String   @default("MM/DD/YYYY")
  
  // Notification preferences
  emailNotifications  Boolean  @default(true)
  pushNotifications   Boolean  @default(true)
  weeklyDigest        Boolean  @default(true)
  marketingEmails     Boolean  @default(false)
  
  // Feature preferences
  compactMode         Boolean  @default(false)
  showTutorials       Boolean  @default(true)
  keyboardShortcuts   Boolean  @default(true)
  
  // Privacy preferences
  profileVisibility   Visibility @default(TEAM)
  activityVisibility  Visibility @default(TEAM)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

enum Theme {
  LIGHT
  DARK
  SYSTEM
}

enum Visibility {
  PUBLIC
  TEAM
  PRIVATE
}

// ============================================================================
// Audit Logging System
// ============================================================================

// Comprehensive audit trail for security-sensitive actions
// Required for compliance (SOC2, GDPR) and incident investigation
model AuditLog {
  id          String      @id @default(cuid())
  
  // Who performed the action
  userId      String?     // Null for system actions or unauthenticated
  sessionId   String?     // Link to session for device context
  ipAddress   String?
  userAgent   String?
  
  // What happened
  action      AuditAction
  resource    String      // e.g., "user", "session", "subscription"
  resourceId  String?     // ID of the affected resource
  
  // Context
  details     Json?       // Additional context (varies by action)
  severity    AuditSeverity @default(INFO)
  
  // Outcome
  success     Boolean     @default(true)
  errorCode   String?
  errorMessage String?
  
  // Timestamps
  createdAt   DateTime    @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([severity])
  @@index([createdAt])
  @@index([ipAddress])
}

enum AuditAction {
  // Authentication
  LOGIN_SUCCESS
  LOGIN_FAILED
  LOGOUT
  SESSION_CREATED
  SESSION_REVOKED
  SESSION_EXPIRED
  PASSWORD_CHANGED
  PASSWORD_RESET_REQUESTED
  PASSWORD_RESET_COMPLETED
  
  // Authorization
  PERMISSION_DENIED
  ROLE_CHANGED
  
  // Data access
  DATA_EXPORTED
  DATA_DELETED
  
  // Admin actions
  USER_CREATED
  USER_DELETED
  USER_SUSPENDED
  SETTINGS_CHANGED
  
  // Security events
  SUSPICIOUS_ACTIVITY
  RATE_LIMIT_EXCEEDED
  IP_BLOCKED
}

enum AuditSeverity {
  INFO
  WARNING
  CRITICAL
}

// ============================================================================
// Two-Factor Authentication
// ============================================================================

// Stores 2FA configuration and recovery options for users
// Security-critical: secrets are encrypted, backup codes are hashed
model TwoFactorAuth {
  id              String    @id @default(cuid())
  userId          String    @unique
  
  // TOTP Configuration
  secret          String    // Encrypted with AES-256-GCM
  algorithm       String    @default("SHA1")  // SHA1, SHA256, SHA512
  digits          Int       @default(6)       // 6 or 8 digit codes
  period          Int       @default(30)      // Seconds per code
  
  // Recovery
  backupCodes     String[]  // Hashed with bcrypt, single-use
  backupCodesUsed Int       @default(0)
  
  // Status
  verified        Boolean   @default(false)   // User completed setup
  enabledAt       DateTime?
  lastUsedAt      DateTime?
  
  // Security
  failedAttempts  Int       @default(0)
  lockedUntil     DateTime?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

// Tracks 2FA verification attempts for rate limiting and security monitoring
model TwoFactorAttempt {
  id          String    @id @default(cuid())
  userId      String
  ipAddress   String?
  userAgent   String?
  
  method      TwoFactorMethod
  success     Boolean
  failReason  String?   // "invalid_code", "expired", "locked", etc.
  
  createdAt   DateTime  @default(now())
  
  @@index([userId])
  @@index([ipAddress])
  @@index([createdAt])
}

enum TwoFactorMethod {
  TOTP          // Time-based one-time password (authenticator app)
  BACKUP_CODE   // Single-use recovery code
  SMS           // SMS verification (if enabled)
  EMAIL         // Email verification (if enabled)
}
